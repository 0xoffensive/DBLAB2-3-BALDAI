@model Org.Ktu.Isk.P175B602.Autonuoma.Models.MokejimasF2.MokejimasCE

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Sutarties šalinimas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-d" }) )
{
	@Html.AntiForgeryToken()

	<fieldset>
		<legend class="confirm-msg">Ar tikrai norite šalinti šį mokėjimą?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Mokejimas.id_Mokejimas)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.id_Mokejimas)</dd>

			<dt>@Html.DisplayNameFor(m => m.Mokejimas.data)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.data)</dd>

			<dt>@Html.DisplayNameFor(m => m.Mokejimas.suma)</dt>
			<dd>@Html.DisplayFor(m => m.Mokejimas.suma)</dd>

		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="fail-msg">
				<i class="fa-solid fa-circle-exclamation"></i> Šio mokėjimo pašalinti negalima, nes jo būsena yra <i>neapmoketa</i>.
			</div>
		}
		else
		{
			<div class="buttons">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Mokejimas.id_Mokejimas})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
			</div>		
		}
	</fieldset>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>